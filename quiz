for i in range (1,6):
    for j in range (1,i+1):
        print("*",end="")
    print("\n")

#

for i in range (5,0,-1):
    for j in range (1,i+1):
        print("*",end="")
    print("\n")

#

for i in range (1,6):
    for j in range (i):
            print("*",end="")
    for k in range(6-i):
         print("#",end="")
    print("\n")

num_rows=int(input("Enter the number of rows:"))
symbol=input("Enter the symbol to use:")
for i in range(num_rows):
     print(symbol * (i+1))